<Window x:Class="WPFCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="350" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="txtDisplay" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                 Height="50" Margin="10" IsReadOnly="True" TextAlignment="Right"/>

        <Grid Margin="10,70,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="1" Grid.Row="0" Grid.Column="0" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="2" Grid.Row="0" Grid.Column="1" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="3" Grid.Row="0" Grid.Column="2" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="+" Grid.Row="0" Grid.Column="3" Click="Button_Click" Width="50" Height="50"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="-" Grid.Row="1" Grid.Column="3" Click="Button_Click" Width="50" Height="50"/>

            <Button Content="7" Grid.Row="2" Grid.Column="0" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="x" Grid.Row="2" Grid.Column="3" Click="Button_Click" Width="50" Height="50"/>

            <Button Content="C" Grid.Row="3" Grid.Column="0" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="0" Grid.Row="3" Grid.Column="1" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="=" Grid.Row="3" Grid.Column="2" Click="Button_Click" Width="50" Height="50"/>
            <Button Content="/" Grid.Row="3" Grid.Column="3" Click="Button_Click" Width="50" Height="50"/>
        </Grid>
    </Grid>
</Window>
